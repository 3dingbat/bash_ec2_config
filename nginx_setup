#
# A virtual host using mix of IP-, name-, and port-based configuration
#
  server {
    listen 80;
    server_name $domain;

    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $http_host;
    }

    location /static/ {
        autoindex on;
        alias /home/$project/$project/static/static_root/;
    }

  }
